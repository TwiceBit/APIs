public abstract class Scheduler {

	private int ms = 1000;
	
	
	
	
	public Scheduler(int ms) {
		this.ms = ms;
		
		Runnable r = new Runnable() {
			public void run() {
				while(true){
					SchedulerBlock();
					try {
						Thread.sleep(ms);
					} catch (InterruptedException e) {
						// TODO Auto-generated catch block
						e.printStackTrace();
					}
				}
			}
		};
		new Thread(r).start();
		
	}
	
	public abstract void SchedulerBlock();
	
